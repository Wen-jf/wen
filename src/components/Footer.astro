---
import { headerData } from '../data/header'; // 导入本地数据
---

<div class="footer">
    <div class="footerList">
        <div class="container">
            <div class="row">
                <!-- 快速链接部分 -->
                <div class="col-lg-4">
                    <p>Quick Links /</p>
                    {headerData.navLinks.map((link) => (
                        <a href={link.href} title={link.title}>{link.title}</a>
                    ))}
                    <div class="social-links">
                        {headerData.socialLinks.map(social => (
                            <a href={social.href}><i class={social.icon}></i></a>
                        ))}
                    </div>
                </div>

                <!-- 联系我们部分 -->
                <div class="col-lg-4">
                    <p>About Us /</p>
                    <div>
                        <span>{headerData.contactInfo.tel.label}</span>
                        <a href={headerData.contactInfo.tel.href}>{headerData.contactInfo.tel.value}</a>
                    </div>
                    <div>
                        <span>{headerData.contactInfo.email.label}</span>
                        <a href={headerData.contactInfo.email.href}>{headerData.contactInfo.email.value}</a>
                    </div>
                    <div>
                        <span>{headerData.contactInfo.address.label}</span>
                        <a href={headerData.contactInfo.address.href}>
                            {headerData.contactInfo.address.value}
                        </a>
                    </div>
                </div>

                <!-- 热门标签部分 -->
                <div class="col-lg-4">
                    <p>Hot Tag /</p>
                    {headerData.hotTags.map(tag => (
                        <a href={tag.href}>{tag.title}</a>
                    ))}
                </div>
            </div>
        </div>
    </div>
    <div>
        {headerData.copyright}
    </div>
</div>

<style>
    .footer {
        color: white;
        background: #353A34;
    }

    .footer a {
        color: white;
    }

    .footer a:hover {
        color: #38952B;
        opacity: 1;
    }

    .footer > .footerList {
        padding: 70px 0;
    }

    .footer > .footerList .row > div p {
        width: 100%;
        font-size: 24px;
        font-family: PingFangSC-Medium, PingFang SC;
        font-weight: 500;
        color: #FFFFFF;
        margin-bottom: 35px;
        text-transform: capitalize;
    }

    .footer > .footerList .row > div:nth-child(1) {
        padding-right: 100px;
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
    }

    .footer > .footerList .row > div:nth-child(1) > a {
        display: block;
        width: 50%;
        margin-bottom: 18px;
        text-transform: capitalize;
    }

    .footer > .footerList .row > div:nth-child(1) > div {
        margin-top: 10px;
        display: flex;
        flex-wrap: wrap;
        width: 100%;
    }

    .social-links {
        display: flex;
        margin-top: 1.5rem;
        gap: 1rem;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        transition: var(--transition);
        color: white;
        text-decoration: none;
        font-size: 1.2rem;
    }

    .social-links a:hover {
        transform: translateY(-5px);
    }

    .footer > .footerList .row > div:nth-child(2) {
        padding-right: 80px;
    }

    .footer > .footerList .row > div:nth-child(2) span {
        margin-right: 5px;
    }

    .footer > .footerList .row > div:nth-child(2) > div {
        margin-bottom: 15px;
    }

    .footer > .footerList .row > div:nth-child(3) a {
        display: block;
        margin-bottom: 18px;
    }

    .footer > div:last-child {
        font-size: 12px;
        font-family: PingFangSC-Regular, PingFang SC;
        font-weight: 400;
        color: #FFFFFF;
        padding: 15px 0;
        text-align: center;
        border-top: 1px solid #979797;
    }

    @media (max-width: 992px) {
        .footer > .footerList {
            padding: 40px 0;
        }

        .footer > .footerList .row > div p {
            font-size: 20px;
            margin-bottom: 25px;
        }

        .footer > .footerList .row > div {
            padding-right: calc(var(--bs-gutter-x) * .5) !important;
            margin-bottom: 50px;
        }

        .footer > .footerList .row > div a, .footer > .footerList .row > div span {
            font-size: 12px !important;
            margin-bottom: 12px !important;
        }
    }
</style>